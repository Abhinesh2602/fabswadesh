<!-- LOGO TOP CONTAINER -->
<div class="logo-top-container">
  <div class="fabswadesh_logomaincontainer">
    <div class="pl-lg-0 ml-lg-0">
      {%- render 'site-logo' -%}
    </div>
  </div>

  <!-- HEADER WRAP -->
  <div class="header-top__wrap d-flex py-1 align-items-center w-100">

    <div class="d-flex d-lg-none align-items-center gap-2 w-100 justify-content-between">
      <!-- 1. Menu Toggle -->
      <div class="d-flex align-items-center">
        {%- render 'button-toggle-menu-mobile' -%}
      </div>

      <!-- 2. Mobile Search -->
      <form
        action="{{ routes.search_url }}"
        method="get"
        role="search"
        class="fs-header-search-mobile position-relative">
        <input
          type="search"
          name="q"
          class="fs-search-input-mobile-with-button"
          placeholder="Search..."
          aria-label="Search">
        <button
          type="submit"
          class="fs-search-button-inside"
          aria-label="Search">
          {% render 'icon-search' %}
        </button>
      </form>

      <!-- 3. Wishlist & Cart -->
      <div class="d-flex align-items-center">
        {%- render 'block-wishlist' -%}
        {%- render 'block-cart' -%}
      </div>
    </div>

    <!-- ✅ DESKTOP HEADER: visible only on lg and up -->
    <div class="d-none d-lg-flex justify-content-between align-items-center w-100 px-3">
      <!-- Left: Search + Localization -->
      <div class="d-flex align-items-center">
        <form
          action="{{ routes.search_url }}"
          method="get"
          role="search"
          class="fs-header-search d-flex align-items-center me-3">
          <input
            type="search"
            name="q"
            class="fs-search-input me-2"
            placeholder="Search..."
            aria-label="Search">
          <button
            type="submit"
            class="fs-search-button"
            aria-label="Search">
            {% render 'icon-search' %}
          </button>
        </form>

        {%- liquid
          assign enable_image = section.settings.enable_image
          assign enable_name = section.settings.enable_name
          if section.settings.e_hd_currency and localization.available_countries.size > 1
            render 'localization' id: 'HeaderCountryForm', enable_image: enable_image, enable_name: enable_name
          endif
          if section.settings.enable_language_selector and localization.available_languages.size > 1
            render 'localization-language', id: 'HeaderLanguageForm', enable_name: enable_name
          endif
        -%}
      </div>

      <!-- Right: Wishlist & Cart -->
      <div class="d-flex align-items-center">
        {%- render 'block-wishlist' -%}
        {%- render 'block-cart' -%}
      </div>
    </div>
  </div>
</div>

<!-- DESKTOP MENU -->
<div class="d-none d-lg-flex col-menu">
  {%- liquid
    assign main_linklist = section.settings.main_linklist
    assign blocks = section.blocks
  -%}
  {%- render 'block-menu'
    , main_linklist: main_linklist
    , blocks: blocks -%}
</div>

